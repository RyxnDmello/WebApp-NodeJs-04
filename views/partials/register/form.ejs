<article class="register-carousel">
  <form class="register-form" action="/account/create">
    <div class="register-input-container">
      <h4 class="register-input-label">Username</h4>
      <input
        class="register-input"
        autocomplete="off"
        required="false"
        name="username"
        type="text"
      />
    </div>

    <div class="register-input-container">
      <h4 class="register-input-label">Email</h4>
      <input
        class="register-input"
        autocomplete="off"
        required="false"
        name="email"
        type="email"
      />
    </div>

    <div class="register-input-container">
      <h4 class="register-input-label">Password</h4>
      <input
        class="register-input"
        autocomplete="off"
        required="false"
        name="password"
        type="password"
      />
    </div>

    <div class="register-buttons-container">
      <button class="register-button" type="submit">
        <img class="register-button-image" src="/buttons/profile.png" />
        <h4 class="register-button-text">Create</h4>
      </button>

      <button class="register-button" type="reset">
        <img class="register-button-image" src="/buttons/profile.png" />
        <h4 class="register-button-text">Clear</h4>
      </button>

      <button class="register-button" type="button">
        <img class="register-button-image" src="/buttons/profile.png" />
        <h4 class="register-button-text">Login Instead?</h4>
      </button>
    </div>
  </form>
</article>

<img class="register-background" src="/register/background-1.jpg" />
